{% extends 'Cungfoo/base.twig' %}
{% block content %}
        <table class="table">
            <thead>
                <tr>
                    {% for fieldname in fieldnames %}
                        <th>{{ fieldname }}</th>
                    {% endfor %}
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in collection %}
                    <tr>
                        {% for fieldname in fieldnames %}
                            <td>{{ item[fieldname] }}</td>
                        {% endfor %}
                        <td><a href="{{ path('%s_crud_read' | format (name), {'id': item['Id']}) }}"><i class="icon-eye-open"></i></a></td>
                        <td><a href="{{ path('%s_crud_update' | format (name), {'id': item['Id']}) }}"><i class="icon-edit"></i></a></td>
                        <td><a href="{{ path('%s_crud_delete' | format (name), {'id': item['Id']}) }}"><i class="icon-remove-circle"></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <hr/>

        <div class="form-actions">
            <div class="btn-group">
                <a class="btn" href="{{ path('%s_crud_update' | format (name)) }}"><i class="icon-plus"></i> Ajouter</a>
            </div>
        </div>


{% endblock %}