{% extends 'base.twig' %}

{% block content %}
        <form action="{{ path('%s_crud_create' | format (name), {'id': form.id.get('value')}) }}" method="post">
            {{ form_widget(form) }}

            <div class="form-actions">
                <div class="btn-toolbar">
                    <button type="submit" class="btn btn-primary" style="margin-bottom: -5px">Enregistrer</button>
                    <div class="btn-group">
                        <a class="btn" href="{{ path('%s_crud_list' | format (name)) }}"><i class="icon-list"></i> Retourner sur la liste</a>
                        <a class="btn" href="{{ path('%s_crud_show' | format (name), {'id': form.id.get('value') }) }}"><i class="icon-edit"></i> Voir</a>
                        <a class="btn" href="{{ path('%s_crud_delete' | format (name), {'id': form.id.get('value') }) }}"><i class="icon-remove-circle"></i> Supprimer</a>
                    </div>
                </div>
            </div>
        </form>

{% endblock %}