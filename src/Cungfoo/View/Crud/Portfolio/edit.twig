<tr class="well" id="formMedia{{ form.id.get('value') }}">
    <td colspan="7">
        <form action="{{ path('portfolio_edit', {id: form.id.get('value')}) }}" class="portfolio-form" method="post" {{ form_enctype(form) }}>
            <div class="row-fluid">
                <div class="span6">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'width': '100%'}) }}
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
                <div class="span6">
                    {{ form_label(form.portfolio_tags) }}
                    <input id="portfolio_tags_add" name="Portfolio[tags_add]" type="text"/>
                    <a class="portfolio-tag-btn btn" href="{{ path('portfolio_tag_add') }}" data-field-id="portfolio_tags_add">Ajouter le tag</a>
                </div>
            </div>
            {{ form_errors(form) }}
            {{ form_widget(form.portfolio_tags) }}
            <hr/>
            <button type="submit" class="btn pull-right" style="margin-bottom: -5px">{{ "crud.button.use" | trans }}</button><br/>
            <div style="display:none">{{ form_rest(form) }}</div>
        </form>
    </td>
</tr>
