<div id="portfolioPopin" class="modal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <ul class="nav nav-tabs">
            {% if media %}
            <li class="active"><a href="#media" data-toggle="tab">Media</a></li>
            {% endif %}
            <li{% if media == null %} class="active"{% endif %}><a href="#portfolio" data-toggle="tab">Portfolio</a></li>
            <li><a href="#upload" data-toggle="tab">Choose file</a></li>
        </ul>
    </div>
    <div class="modal-body">
        <div class="tab-content">
            {% if media %}
            <div class="tab-pane active" id="media">
                <table id="list" class="table table-striped ">
                    <tbody>
                        {% include 'Crud/Portfolio/table_line.twig' with {'line': media} %}
                    </tbody>
                </table>
            </div>
            {% endif %}
            <div class="tab-pane{% if media == null %} active{% endif %}" id="portfolio">
                <table id="list" class="table table-striped ">
                    <tbody>
                    {% for line in paginator %}
                    {% include 'Crud/Portfolio/table_line.twig' with {'line': line} %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="upload">
                <div id="dragContainer">
                    Drop images here or click to upload.
                </div>
                <table id="droppedFiles" class="table table-striped">
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        Portfolio baby
    </div>
</div>
