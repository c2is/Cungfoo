{% extends 'base.twig' %}

{% block content %}
    {% if form.id.get('value') %}
        <h2>{{ (name ~ ".crud.update") | trans  ({'%name%': form.id.get('value') }) }}</h2><hr/>
        <form action="{{ path('%s_crud_update' | format (name), {'id': form.id.get('value')}) }}" method="post" {{ form_enctype(form) }}>
    {% else %}
        <h2>{{ (name ~ ".crud.create") | trans}}</h2><hr/>
        <form action="{{ path('%s_crud_create' | format (name)) }}" method="post" {{ form_enctype(form) }}>
    {% endif %}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        <div class="form-actions">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn" href="{{ path('%s_crud_list' | format (name)) }}"><i class="icon-list"></i> {{ "crud.button.list" | trans }}</a>
                {% if form.id.get('value') %}
                    <a class="btn btn-danger" href="{{ path('%s_crud_delete' | format (name), {'id': form.id.get('value') }) }}"><i class="icon-remove-circle icon-white"></i> {{ "crud.button.delete" | trans }}</a>
                {% endif %}
                </div>
                <button type="submit" class="btn btn-primary pull-right" style="margin-bottom: -5px">{{ "crud.button.save" | trans }}</button>
            </div>
        </div>
    </form>
{% endblock %}
