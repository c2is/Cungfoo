{% extends "base.twig" %}
{% block bodyClass %} event{% endblock %}

{% block content %}
    <div id="wrap" class="fixed-width clear">
        <div class="clear">
            <div class="column left">
                {% block topLeftColumn %}
                {% endblock %}
            </div>
            <aside class="column right">
                {% block topRightColumn %}
                {% endblock %}
            </aside>
        </div>
        <div class="column clearboth clear">
            {% block contentFull %}
            {% endblock %}
        </div>
        <div class="clear">
            <div class="column left">
                {% block bottomLeftColumn %}
                {% endblock %}
            </div>
            <aside class="column right">
                {% block bottomRightColumn %}
                {% endblock %}
            </aside>
        </div>
    </div>
{% endblock %}