{% extends "base.twig" %}

{% block title %}
{% spaceless %}
    {% if metaTitle %}{{ metaTitle }}
    {% else %}{{ "seo.title.bonPlan" | trans ({'%bonPlan%': seo}) }}
    {% endif %}
{% endspaceless %}
{% endblock %}

{% block metaDescription %}
{% spaceless %}
    {% if metaDescription %}{{ metaDescription }}
    {% else %}{{ "seo.meta.bonPlan" | trans  ({'%bonPlan%': seo})}}
    {% endif %}
{% endspaceless %}
{% endblock %}

{% block leftColumn %}

    <h1>{{ title }}</h1>
    <h2 class="h3-like">{{ accroche }}</h2> {# Accroche #}
    <p class="destiDescription">{{ description | raw }}</p> {# Description #}
{% endblock %}

{% block rightColumn %}
<div id="greyBoxes">
    {{ esi(path('widget', {'name': 'sejour_reussi'})) }}
</div>
{% endblock %}
