{% extends "base.twig" %}

{% block title %}
{% spaceless %}
    {{ bonPlan.seoTitle | trans ({'%bonPlan%': bonPlan.name}) }}
{% endspaceless %}
{% endblock %}

{% block metaDescription %}
{% spaceless %}
    {{ bonPlan.seoDescription | trans  ({'%bonPlan%': bonPlan.name})}}
{% endspaceless %}
{% endblock %}

{% block leftColumn %}

    {% include "Breadcrumbs/_breadcrumbs.twig" %}

    <h1> {{ "bon_plan.title" | trans ({'%bonPlan%': bonPlan.name}) }}</h1>

    <div class="richText">{{ bonPlan.description | raw }}</div>{# Description #}

    {% if bonPlan.imagePage %}
    <img class="bdPict" src="{{ asset(bonPlan.imagePage | media('file')) }}" alt="">
    {% endif %}

    {{ esi(path('esi_bon_plan_page', {'bonPlan': bonPlan.getId })) }}
{% endblock %}

{% block rightColumn %}
    {% include 'Form/_search_engine.twig' %}
    <div id="greyBoxes">
        {{ esi(path('widget', {'name': 'reassurance'})) }}
    </div>
{% endblock %}
