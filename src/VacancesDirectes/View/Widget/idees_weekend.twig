<div id="weekendIdeasBloc" class="clear radiusBox greyC">
    <div class="stamp fushia">
        <h2>{{ "general.idees_week_end" | trans }}</h2>
    </div>
    {% for idee in ideesweekend %}
        <div class="element clear{% if idee.prix == "" %} noprice{% endif %}{% if loop.last %} last{% endif %} linkParent">
            <div class="left">
                <img class="view" src="{{ asset(idee.imagePath | media('file')) }}" width="96" alt="" />
            </div>
            <div class="details left">
                <span class="title">{{ idee.titre }}</span>
            </div>
            {% if(idee.prix != "") %}
                <a href="{{ idee.lien | trans }}" class="stain cover linkBlock "><span>{{ "general.a_partir_de" | trans }}<br /><span class="price linkBlock">{{ idee.prix }}<span class="fine">&nbsp;</span>â‚¬</span></span></a>
            {% endif %}
        </div>
    {% endfor %}
    {# TODO <a href="#_" class="bt link right">{{ "home.idees_weekend.link" | trans  ({'%number%': ideesweekend|length }) }}</a> #}
</div>
