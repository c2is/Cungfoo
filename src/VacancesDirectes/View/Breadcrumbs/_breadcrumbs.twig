{% set breadcrumbsRoute = app.request.get('_route') %}
<ol class="pathway" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
    <li>&gt; <a href="{{ path('homepage') }}" itemprop="url"><span itemprop="title">{{ 'breadcrumbs.home' | trans }}</span></a></li>
    {% if 'destination' in breadcrumbsRoute %}
        {% set breadCrumbsPays = app.request.get('pays') %}
    <li>&gt; <a href="{{ path('destination_pays', {'pays': breadCrumbsPays.slug}) }}" itemprop="url"><span itemprop="title">{{ breadCrumbsPays }}</span></a></li>
        {% if breadcrumbsRoute == 'destination_region' or breadcrumbsRoute == 'destination_ville' or breadcrumbsRoute == 'destination_camping' %}
            {% set breadCrumbsRegion = app.request.get('region') %}
    <li>&gt; <a href="{{ path('destination_region', {'pays': breadCrumbsPays.slug, 'region': breadCrumbsRegion.slug}) }}" itemprop="url"><span itemprop="title">{{ breadCrumbsRegion }}</span></a></li>
            {% if breadcrumbsRoute == 'destination_ville' or breadcrumbsRoute == 'destination_camping' %}
                {% set breadCrumbsVille = app.request.get('ville') %}
    <li>&gt; <a href="{{ path('destination_ville', {'pays': breadCrumbsPays.slug, 'region': breadCrumbsRegion.slug, 'ville': breadCrumbsVille.slug}) }}" itemprop="url"><span itemprop="title">{{ breadCrumbsVille }}</span></a></li>
                {% if breadcrumbsRoute == 'destination_camping' %}
                    {% set breadCrumbsCamping = app.request.get('camping') %}
    <li>&gt; <a href="{{ path('destination_camping', {'pays': breadCrumbsPays.slug, 'region': breadCrumbsRegion.slug, 'ville': breadCrumbsVille.slug, 'camping': breadCrumbsCamping.slug}) }}"><span itemprop="title">{{ breadCrumbsCamping }}</span></a></li>
                {% endif %}
            {% endif %}
        {% endif %}
    {% endif %}
    {% if breadcrumbsRoute == 'categorie-bonsplans' %}
    <li>&gt; <span itemprop="title">{{ 'breadcrumbs.bonsplans' | trans }}</span></li>
    <li>&gt; <span itemprop="title">{{ categorie.name }}</span></li>
    {% endif %}
    {% if breadcrumbsRoute == 'bonsplans' %}
    <li>&gt; <span itemprop="title">{{ 'breadcrumbs.bonsplans' | trans }}</span></li>
    <li>&gt; <span itemprop="title">{{ bonPlan.name }}</span></li>
    {% endif %}
    {% if 'edito' in breadcrumbsRoute %}
    <li>&gt; <a href="{{ path('edito_by_slug', {'slug': edito.slug}) }}"><span itemprop="title">{{ edito.name }}</span></a></li>
    {% endif %}
</ol>
