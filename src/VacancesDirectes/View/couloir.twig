<!doctype html>
<html class="js-false" lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{% endblock %} - Vacances Directes</title>

    <meta name="description" content="">
    <meta name="author" content="">

    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('css/vacancesdirectes/screen.css') }}">

    <script src="{{ asset('vendor/head.extended.js') }}"></script>
    <script>var templatePath = '{{ asset('') }}';</script><!-- templatePath : chemin du template en absolue -->
    <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>
</head>
<body class="booking">
    <header class="clear">
        {% include "Menu/couloir.twig" %}
        <div id="header" class="fixed-width clear">
            <div id="headerRight">
                <a id="account" href="#">Mon compte</a>
                <div id="telephone">
                    <span>{{ "header.information" | trans }}
                        {{ "header.telephone" | trans }}
                    </span>
                </div>
            </div>
            <a href="{{ path( 'homepage' ) }}" title="Retourner à Vacances directes | Le mobil-home et vous" id="logo">
                <img src="{{ asset('images/vacancesdirectes/common/pict/vacancesdirectes-logo.png') }}" alt="Vacances directes | Le mobil-home et vous" /></a>
        </div>
    </header>

    <div id="wrap" class="fixed-width clear">
        <div id="headerContainer" class="column clear">
            <h1><span>Bienvenue dans l’espace de </span>réservation</h1>
            <nav id="stepNav" class="clearboth">
                <ul class="topnav fixed-width clear">
                    <li class="tab{% if step == 1 %} current{% elseif step > 1%} completed{% endif %}"><span>Détails du séjour</span></li>
                    <li class="tab{% if step == 2 %} current{% elseif step > 2%} completed{% endif %}"><span>Récapitulatif</span></li>
                    <li class="tab{% if step == 3 %} current{% elseif step > 3%} completed{% endif %}"><span>Paiement</span></li>
                    <li class="tab{% if step == 4 %} current{% endif %}"><span>Confirmation</span></li>
                </ul>
            </nav>
        </div>
        {% block content %}
            <div class="column left">
                <p>Date: <input type="text" id="reservation_content_date_creation_" /></p>

                {% block leftColumn %}
                {% endblock %}
            </div>
            <aside class="column right">
                {% block rightColumn %}
                {% endblock %}
            </aside>
            {% block columnClearboth %}
            {% endblock %}
        {% endblock %}
    </div>

    {% include 'footer.twig' %}

    <script src="http://code.jquery.com/jquery-1.8.0.min.js"></script>
    <script>window.jQuery || document.write('<script src='+ templatePath + '"vendor/jquery-1.8.0.min.js">\x3C/script>')</script>

    <script>
        head.js(
            {modernizr: templatePath + "vendor/modernizr-2.6.1.min.js"}, // test support html5 functionality
            {selectivizr: templatePath+"vendor/selectivizr-min.js"}, // extend css selectors for IE
            {jqPlugins: templatePath + "js/vacancesdirectes/plugins.js"},
            {frontJS: templatePath + "js/vacancesdirectes/front.js"},
            {search: templatePath + "js/vacancesdirectes/searchSelectChange.js"}
            {% block headjs %}{% endblock %}
        );
    </script>

    <!-- Prompt IE 6 users to install Chrome Frame -->
    <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    <![endif]-->
</body>
</html>
