<!doctype html>
<html class="js-false" lang="{{ app.context.get('language') }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{% endblock %}{{ "seo.title.couloir" | trans }} - Vacances Directes</title>

    <meta name="description" content="{% block metaDescription %}{{ "seo.meta.couloir" | trans }}{% endblock %}">
    <meta name="author" content="">

    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('css/vacancesdirectes/screen.css?v='~app.config.get('version')) }}">
    {% if app.context.get('language') != "fr" %}
    <link rel="stylesheet" href="{{ asset('css/vacancesdirectes/screen_'~app.context.get('language')~'.css?v='~app.config.get('version')) }}">
    {% endif %}

    <script src="{{ asset('vendor/head.extended.js?v='~app.config.get('version')) }}"></script>
    <script>var templatePath = '{{ asset('') }}';</script><!-- templatePath : chemin du template en absolue -->
    <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>
</head>
<body class="booking">
    <header class="clear">
        {% include "Menu/couloir.twig" %}
        <div id="header" class="fixed-width clear">
            <div id="headerRight">
                {#<a id="account" href="#">Mon compte</a>#}
                <div id="telephone">
                    <span>{{ "header.information" | trans }}
                        <span class="phoneNum">{{ "header.telephone.number" | trans }}</span><span class="phonePrice">{{ "header.telephone.price" | trans }}</span>
                    </span>
                </div>
            </div>
            <a href="{{ path( 'homepage' ) }}" title="Retourner à Vacances directes | Le mobil-home et vous" id="logo">
                <img src="{{ asset('images/vacancesdirectes/common/pict/vacancesdirectes-logo_' ~ app.context.get('language') ~ '.png') }}" alt="Vacances directes | Le mobil-home et vous" /></a>
        </div>
    </header>

    <div id="wrap" class="fixed-width clear">
        <div id="headerContainer" class="column clear">
            <h1><span>{{ "couloir.title" | trans }} </span>{{ "couloir.title_reservation" | trans }}</h1>
            <nav id="stepNav" class="clearboth">
                <ul class="topnav fixed-width clear">
                    <li class="tab{% if step == 1 %} current{% elseif step > 1%} completed{% endif %}"><span>{{ "couloir.menu.detail" | trans }}</span></li>
                    <li class="tab{% if step == 2 %} current{% elseif step > 2%} completed{% endif %}"><span>{{ "couloir.menu.recapitulatif" | trans }}</span></li>
                    <li class="tab{% if step == 3 %} current{% elseif step > 3%} completed{% endif %}"><span>{{ "couloir.menu.paiement" | trans }}</span></li>
                    <li class="tab{% if step == 4 %} current{% endif %}"><span>{{ "couloir.confirmation" | trans }}</span></li>
                </ul>
            </nav>
        </div>
        {% block content %}
            <div class="column left">
                {% block leftColumn %}
                {% endblock %}
            </div>
            <aside class="column right">
                {% block rightColumn %}
                {% endblock %}
                <div id="greyBoxes" class="clear">
                    <div id="needHelpBloc" class="clear radiusBox greyC">
                        <div class="stamp fushia">
                            <h2>{{ "resalys.besoin_aide_title" | trans }}</h2>
                        </div>
                        <div class="content"><p>{{ "resalys.besoin_aide_subtitle" | trans }}</p></div>
                        <div class="blueCloud" id="needHelpBlocCloud"><span>{{ "resalys.besoin_aide_contact" | trans }}<a class="tel" href="tel:0825133400">{{ "resalys.besoin_aide_num" | trans }}</a>{{ "resalys.besoin_aide_subtitle" | trans }}(0.15€/min)</span></div>
                    </div>
                </div>
            </aside>
            {% block columnClearboth %}
            {% endblock %}
        {% endblock %}
    </div>

    {% include 'footer.twig' %}

    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script>window.jQuery || document.write('<script src='+ templatePath + 'vendor/jquery-1.8.3.min.js">\x3C/script>')</script>

    <script>
        head.js(
            {modernizr: templatePath + "vendor/modernizr-2.6.1.min.js?v={{ app.config.get('version') }}"}, // test support html5 functionality
            {selectivizr: templatePath+"vendor/selectivizr-min.js?v={{ app.config.get('version') }}"}, // extend css selectors for IE
            {jqPlugins: templatePath + "js/vacancesdirectes/plugins.js?v={{ app.config.get('version') }}"},
            {search: templatePath + "js/vacancesdirectes/searchSelectChange.js?v={{ app.config.get('version') }}"}
            {% block headjs %}{% endblock %}
        );
    </script>

    <!-- Prompt IE 6 users to install Chrome Frame -->
    <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    <![endif]-->
</body>
</html>
