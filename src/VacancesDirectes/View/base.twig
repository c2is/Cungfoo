<!doctype html>
<html class="js-false" lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{{ "seo.title.default" | trans }}{% endblock %} | Vacances Directes</title>

    <meta name="description" content="{% block metaDescription %}{{ "seo.meta.default" | trans }}{% endblock %}" />

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('css/vacancesdirectes/screen.css') }}">

    <script src="{{ asset('vendor/head.extended.js') }}"></script>
    <script>
        var templatePath = '{{ asset('') }}';<!-- templatePath : chemin du template en absolue -->
        var sGoogleApiKey = 'AIzaSyBaRlrfkxxMWr5zLkbCBJL21MnYNIYIm9I';
    </script>
</head>
<body class="{% block bodyClass %}{% endblock %}">
    <header class="clear">
        {% include "menu.twig" %}
        <div id="header" class="fixed-width clear">
            <div id="headerRight">
                {#
                <a id="account" href="#">Mon compte</a>
                <div id="accountBox" class="radiusBox greyF arrowUp">
                    <h2>vous êtes un client existant, veuillez vous identifier</h2>
                    <form action="#_" id="connexion">
                        <fieldset>
                            <div class="errors">
                                <ul>
                                    <li>Identifiant incorrect.</li>
                                    <li>Mot de passe incorrect.</li>
                                </ul>
                            </div>
                            <ol>
                                <li>
                                    <div class="clear" id="userField">
                                        <label for="userInput">Nom d'utilisateur</label>
                                        <input type="text" placeholder="Nom d'utilisateur" id="userInput" name="userInput" />
                                    </div>
                                    <div class="clear" id="passwordField">
                                        <label for="passwordInput">Mot de passe</label>
                                        <input type="password" placeholder="Mot de passe" id="passwordInput" name="passwordInput" autocomplete="off" />
                                    </div>
                                    <div class="link clear">
                                        <a href="#">Mot de passe oublié ?</a>
                                    </div>
                                    <button class="bt fushia ib" type="submit">Se connecter</button>
                                </li>
                            </ol>
                        </fieldset>
                    </form>
                </div> #}
                <div id="telephone">
                    <span>{{ "header.information" | trans }}
                        {{ "header.telephone" | trans }}
                    </span>
                </div>
            </div>
            <a href="{{ path( 'homepage' ) }}" title="Retourner à Vacances directes | Le mobil-home et vous" id="logo">
            {% if app.request.get('_route') == 'homepage' %}
                <h1 id="logoTitle">{{ "header.location_mobil_home" | trans }}</h1>
            {% endif %}
                <img src="{{ asset('images/vacancesdirectes/common/pict/vacancesdirectes-logo.png') }}" alt="Vacances directes | Le mobil-home et vous" />
            </a>
            {% if app.request.get('_route') == 'homepage' %}
            <h2 id="catchline">{{ "header.130_camping" | trans }}</h2>
            {% endif %}
        </div>

        {% block slider %}
        {% endblock %}
    </header>

    {% block content %}
    <div id="wrap" class="fixed-width clear">
        <div class="column left">
            {% block leftColumn %}
            {% endblock %}
        </div>
        <aside class="column right">
            {% block rightColumn %}
            {% endblock %}
        </aside>
            {% block columnClearboth %}
            {% endblock %}
    </div>
    {% endblock %}

    {% include 'footer.twig' %}

    <script src="http://code.jquery.com/jquery-1.8.0.min.js"></script>
    <script>window.jQuery || document.write('<script src='+ templatePath + '"vendor/jquery-1.8.0.min.js">\x3C/script>')</script>

    <script>
        head.js(
            {modernizr: templatePath + "vendor/modernizr-2.6.1.min.js"}, // test support html5 functionality
            {selectivizr: templatePath+"vendor/selectivizr-min.js"}, // extend css selectors for IE
            {jqPlugins: templatePath + "js/vacancesdirectes/plugins.js"},
            {frontJS: templatePath + "js/vacancesdirectes/front.js"},
            {search: templatePath + "js/vacancesdirectes/searchSelectChange.js"}
            {% block headjs %}{% endblock %}
        );
    </script>

    <!-- Prompt IE 6 users to install Chrome Frame -->
    <!--[if lte IE 8 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    <![endif]-->
</body>
</html>
