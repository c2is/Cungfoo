<!doctype html>
<html class="js-false" lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{% endblock %} - Vacances Directes</title>

    <meta name="description" content="">
    <meta name="author" content="">

    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('css/vacancesdirectes/screen.css') }}">

    <script src="{{ asset('vendor/head.extended.js') }}"></script>
    <script>var templatePath = '{{ asset('') }}';</script><!-- templatePath : chemin du template en absolue -->
    <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>
</head>
<body class="{% block bodyClass %}{% endblock %}">
    <header class="clear">
        {% include "menu.twig" %}
        <div id="header" class="fixed-width clear">
            <div id="headerRight">
                <a id="account" href="#">Mon compte</a>
                <div id="telephone">
                    <span>{{ "header.information" | trans }}
                        {{ "header.telephone" | trans }}
                    </span>
                </div>
            </div>
            <a href="{{ path( 'homepage' ) }}" title="Retourner à Vacances directes | Le mobil-home et vous" id="logo">
                <img src="{{ asset('images/vacancesdirectes/common/pict/vacancesdirectes-logo.png') }}" alt="Vacances directes | Le mobil-home et vous" />
            </a>
            {% if app.request.get('_route') == 'homepage' %}
            <h1 id="catchline">{{ "header.130_camping" | trans }}</h1>
            {% endif %}
        </div>

        {% block slider %}
        {% endblock %}
    </header>


    {% block content %}
    <div id="wrap" class="fixed-width clear">
        <div class="column left">
            {% block leftColumn %}
            {% endblock %}
        </div>
        <aside class="column right">
            {% block rightColumn %}
            {% endblock %}
        </aside>
            {% block columnClearboth %}
            {% endblock %}
    </div>
    {% endblock %}

    <footer class="clear">
        <div class="footer-home fixed-width clear">
            <div id="footerInsert" class="clear">
                <div id="insertContact" class="left radiusBox greyF">
                    <h3>{{ "footer.nous_joindre" | trans }}</h3>
                    <div class="content">
                        <p>
                            <a class="tel" href="tel:0825133400">{{ "footer.contact.tel"  | trans }}*</a>
                            Fax : {{ "footer.contact.fax" | trans }}
                        </p>
                        <span class="price">*(0,15 €/min)</span>
                        <p class="small">
                            Vacances Directes<br />
                            ZA les Alleux<br />
                            4 Rue du Suroit<br />
                            BP 81010 - TADEN<br />
                            22101 DINAN cedex
                        </p>
                        <a class="bt big gris2" href="#">{{ "footer.nous_contacter" | trans }}</a>
                    </div>
                </div>
                <div id="insertCatalog" class="left radiusBox greyC">
                    <div class="content">
                        <h3>{{ "footer.demande_catalogue" | trans }}</h3>
                        <p class="small">
                            {{ "footer.description_catalogue" | trans }}
                        </p>
                        <a class="bt big sombre" href="#">{{ "footer.consulter_catalogue" | trans }}</a>
                        <a class="bt big sombre" href="#">{{ "footer.telecharger_catalogue" | trans }}</a>
                    </div>
                </div>
                <div id="insertFacebook" class="left radiusBox greyC">
                    <div class="content">
                        <h3>{{ "footer.facebook.titre" | trans }}</h3>
                        <p>{{ "footer.facebook.intro" | trans }}</p>
                        <div class="fb-like" data-layout="button_count" data-href="#" data-send="false" data-width="119" data-show-faces="false">{{ "footer.facebook.like" | trans }}</div>
                    </div>
                    <p class="small">
                        <span>{{ "footer.facebook.desc.highlight" | trans }}</span> {{ "footer.facebook.desc" | trans }} <img src="../web/images/vacancesdirectes/common/pict/facebook-blue.png" />.
                    </p>
                </div>
                <div id="insertContest" class="left radiusBox greyF">
                    <h3>{{ "footer.jeu.titre" | trans }} <img src="../web/images/vacancesdirectes/common/pict/facebook-white.png" /></h3>
                    <span>{{ "footer.jeu.desc" | trans }}</span>
                    <a class="bt big gris2" href="#">{{ "general.jouer" | trans }}</a>
                </div>
            </div>
            <div id="footerInfo" class="clear">
                <div id="infoMenu" class="left">
                    <h3>{{ "footer.location_camping" | trans }}</h3>
                    <ul>
                        <li><a class="level-1" href="#">{{ "menu.destinations" | trans }}</a></li>
                        <li><a class="level-1" href="#">{{ "menu.locations" | trans }}</a></li>
                        <li><a class="level-1" href="#">{{ "menu.bons_plans" | trans }}</a></li>
                        <li><a class="level-1" href="#">{{ "menu.vacances" | trans }}</a></li>
                        <li><a class="level-1" href="#">{{ "menu.weekends" | trans }}</a></li>
                    </ul>
                    <ul>
                        <li><a class="directory" href="#">{{ "footer.annuaire_campings" | trans }}</a></li>
                        <li><a class="directory" href="#">{{ "footer.campings_pas_chers" | trans }}</a></li>
                        <li><a class="directory" href="#">{{ "footer.guide_activites" | trans }}</a></li>
                        <li><a class="directory" href="#">{{ "footer.campings_france" | trans }}</a></li>
                        <li><a class="directory" href="#">{{ "footer.campings_espagne" | trans }}</a></li>
                        <li><a class="directory" href="#">{{ "footer.campings_italie" | trans }}</a></li>
                    </ul>
                </div>
                <div id="infoAbout" class="left clear">
                    <div class="clear">
                        <h3>{{ "footer.a_propos" | trans }}</h3>
                        <p>{{ "footer.a_propos.desc" | trans }}</p>
                        <a class="bt big sombre left" href="#">{{ "general.en_savoir_plus" | trans }}</a>
                        <div class="fb-like right" data-layout="button_count" data-href="#" data-send="false" data-width="119" data-show-faces="false">{{ "footer.facebook.like" | trans }}</div>
                    </div>
                    <ul>
                        <li><a class="rubric" href="#">{{ "footer.actualites" | trans }}</a></li>
                        <li><a class="rubric" href="#">{{ "footer.qui_sommes_nous" | trans }}</a></li>
                        <li><a class="rubric" href="#">{{ "footer.recrutement" | trans }}</a></li>
                        <li><a class="rubric" href="#">{{ "footer.ce" | trans }}</a></li>
                    </ul>
                </div>
                <div id="infoOthers" class="left">
                    <div id="infoNewsletter" class="clear">
                        <h3>{{ "footer.newsletter" | trans }}</h3>
                        <p>{{ "footer.newsletter.desc" | trans }}</p>
                        <input type="email" name="footer-email" id="footerEmail" class="left" placeholder="{{ "footer.newsletter.entrer_son_email" | trans }}" />
                        <a class="bt big sombre left" href="#">{{ "general.en_savoir_plus" | trans }}</a>
                    </div>
                    <div id="infoMobile" class="clear">
                        <h3>{{ "footer.site_mobile" | trans }}</h3>
                        <p>{{ "footer.site_mobile.desc" | trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <footer class="clear">
        <div class="footer-links" class="full-width">
            <a href="#_">{{ "footer.contact" | trans }}</a> -
            <a href="#_">{{ "footer.charte_qualite" | trans }}</a> -
            <a href="#_">{{ "footer.conditions_generales_de_location" | trans }}</a> -
            <a href="#_">{{ "footer.faq" | trans }}</a> -
            <a href="#_">{{ "footer.guide_pratique" | trans }}</a> -
            <a href="#_">{{ "footer.plan_du_site" | trans }}</a> -
            <a href="#_">{{ "footer.credits" | trans }}</a> -
            <a href="#_">{{ "footer.mentions_legales" | trans }}</a>
            <span class="card transac">{{ "footer.transactions_securisees" | trans }}</span>
            <span class="card visa">{{ "footer.cb_visa" | trans }}</span>
            <span class="card master">{{ "footer.masterCard" | trans }}</span>
        </div>
    </footer>

    <script src="http://code.jquery.com/jquery-1.8.0.min.js"></script>
    <script>window.jQuery || document.write('<script src='+ templatePath + '"vendor/jquery-1.8.0.min.js">\x3C/script>')</script>

    <script>
        head.js(
            {modernizr: templatePath + "vendor/modernizr-2.6.1.min.js"}, // test support html5 functionality
            {selectivizr: templatePath+"vendor/selectivizr-min.js"}, // extend css selectors for IE
            {jqPlugins: templatePath + "js/vacancesdirectes/plugins.js"},
            {frontJS: templatePath + "js/vacancesdirectes/front.js"},
            {search: templatePath + "js/vacancesdirectes/searchSelectChange.js"}
            {% block headjs %}{% endblock %}
        );
    </script>

    <!-- Prompt IE 6 users to install Chrome Frame -->
    <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    <![endif]-->
</body>
</html>
