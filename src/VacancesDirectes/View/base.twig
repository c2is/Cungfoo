</head>
<body class="{% block bodyClass %}{% endblock %}">
    <header class="clear">
        {% include "menu.twig" %}
        <div id="header" class="fixed-width clear">
            <div id="headerRight">
                {% include 'header.twig' %}
                <div id="telephone">
                    <span>{{ "header.information" | trans }}<br />
                        <a class="phone" href="tel:+33825133400">{{ "header.telephone" | trans }}</a> <span class="price"> (0,15â‚¬/min)</span>
                    </span>
                </div>
            </div>
            <a href="{{ path( 'homepage' ) }}" title="Vacances directes | Le camping tout simplement !" id="logo">
            {% if app.request.get('_route') == 'homepage' %}
                <h1 id="logoTitle">{{ "header.location_mobil_home" | trans }}</h1>
            {% endif %}
                <img src="{{ asset('images/vacancesdirectes/common/pict/vacancesdirectes-logo.png') }}" alt="Vacances directes | Le camping tout simplement !" />
            </a>
            {% if app.request.get('_route') == 'homepage' %}
            <h2 id="catchline">{{ "header.130_camping" | trans }}</h2>
            {% endif %}
        </div>

        {% block slider %}
        {% endblock %}
    </header>

    {% block content %}
    <div id="wrap" class="fixed-width clear">
        <div class="column left">
            {% block leftColumn %}
            {% endblock %}
        </div>
        <aside class="column right">
            {% block rightColumn %}
            {% endblock %}
        </aside>
            {% block columnClearboth %}
            {% endblock %}
    </div>
    {% endblock %}

    {% include 'footer.twig' %}

    <script src="http://code.jquery.com/jquery-1.8.0.min.js"></script>
    <script>window.jQuery || document.write('<script src='+ templatePath + '"vendor/jquery-1.8.0.min.js">\x3C/script>')</script>

    <script>
        head.js(
            {modernizr: templatePath + "vendor/modernizr-2.6.1.min.js"}, // test support html5 functionality
            {selectivizr: templatePath+"vendor/selectivizr-min.js"}, // extend css selectors for IE
            {jqPlugins: templatePath + "js/vacancesdirectes/plugins.js"},
            {frontJS: templatePath + "js/vacancesdirectes/front.js"},
            {search: templatePath + "js/vacancesdirectes/searchSelectChange.js"}
            {% block headjs %}{% endblock %}
        );
    </script>

    <!-- Prompt IE 6 users to install Chrome Frame -->
