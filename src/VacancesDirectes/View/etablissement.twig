{% extends "base.twig" %}

{% block content %}
        {% include 'Form/search_engine.twig'%}
        <h1>{{ etablissement.name }}</h1>
        <p>{{ etablissement.address1 }}, {{ etablissement.getVille }}, {{ etablissement.country }}</p>

        <hr/>

        <fieldset>
            <legend>{{ ("etablissement.activites") | trans }}</legend>
            <ul>
                {% for activite in etablissement.getActivites %}
                <li>{{ activite.setLocale(locale) }}</li>
                {% endfor %}
            </ul>
        </fieldset>

        <hr/>

        <fieldset>
            <legend>{{ ("etablissement.type_hebergements") | trans }}</legend>
            <ul>
                {% for typeHebergement in etablissement.getTypeHebergements %}
                <li>{{ typeHebergement.setLocale(locale) }}</li>
                {% endfor %}
            </ul>
        </fieldset>

        <hr/>

        <fieldset>
            <legend>{{ ("etablissement.situation_geographiques") | trans }}</legend>
            <ul>
                {% for situationGeographiques in etablissement.getSituationGeographiques %}
                <li>{{ situationGeographiques.setLocale(locale) }}</li>
                {% endfor %}
            </ul>
        </fieldset>

        <hr/>

        <fieldset>
            <legend>{{ ("etablissement.destinations") | trans }}</legend>
            <ul>
                {% for destination in etablissement.getDestinations %}
                <li>{{ destination.setLocale(locale) }}</li>
                {% endfor %}
            </ul>
        </fieldset>

        <hr/>

        <fieldset>
            <legend>{{ ("etablissement.service_complementaires") | trans }}</legend>
            <ul>
                {% for service in etablissement.getServiceComplementaires %}
                <li>{{ service.setLocale(locale) }}</li>
                {% endfor %}
            </ul>
        </fieldset>
{% endblock %}
