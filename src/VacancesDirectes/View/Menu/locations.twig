<div id="locations" class="subnav">
    <div class="title">{{ "menu.decouvrez_locations" | trans }}</div>
    <div class="subtitle">{{ "menu.decouvrez_locations_type" | trans }}</div>
    <div class="clear">
        {% for categoryTypeHebergement in categoryTypeHebergements %}
        <div class="radiusBox2 greyC left bgImg linkParent">
            <div class="view" style="background-image:url('{{ asset(categoryTypeHebergement.imageMenu | media('file')) }}')">
                <div class="stamp grey"><span>{{ categoryTypeHebergement }}</span></div>
            </div>
            <a class="stain fushia cover linkBlock" href="{{ path('location_category_type_hebergement', {'categoryTypeHebergement': categoryTypeHebergement.slug}) }}"><span>{{ 'general.a_partir_de' | trans }}<br /><span class="price">{{categoryTypeHebergement.minimumPrice}}<span class="fine">&nbsp;</span>â‚¬</span></span></a>
        </div>
        {% endfor %}
    </div>
    {% if capacites|length > 0 %}
    <div class="subtitle">{{ "menu.decouvrez_locations_capacite" | trans }}</div>
    <div class="clear">
        {% for capacite in capacites %}
        <div class="radiusBox greyC left bgImg capacity linkParent">
            <a class="linkBlock" href="{{ path('location_category_type_hebergement', {'categoryTypeHebergement': capacite.slug}) }}">
                <img class="view" width="100" height="50" src="{{ asset(capacite.imageMenu | media('file')) }}" alt="" />
                <span>{{ capacite.name }}</span>
            </a>
        </div>
        {% endfor %}
    </div>
    {% endif %}
</div>
