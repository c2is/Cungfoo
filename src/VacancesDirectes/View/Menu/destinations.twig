<div>
    <div>{{ "pays.france" | trans }}</div>
    <ul>
    {% for destinationId, destination in regionsByDestinations %}
        <li>
            <div>{{ destination.label | trans }}</div>
            <ul>
            {% for region in destination.regions %}
                <li>{{ region.Id }} {{ region.Name }}</li>
            {% endfor %}
            </ul>
            <div><a href="{{ destinationId }}">{{ "menu.plus_de_regions" | trans }}</a></div>
        </li>
    {% endfor %}
    </ul>
</div>

{{ form_widget (searchForm) }}

<ul>
    <li>
        <span>Libell√©</span>
        <ul>
            {% for letter, etabs in etabByAlphabeticalOrder %}
            <li>
                <strong>{{ letter }}</strong>
                <ul>
                    {% for etab in etabs %}
                    <li><a class="camping" href="{{ etab.Id }}">{{ etab.Name }}</a></li>
                    {% endfor %}
                </ul>
            </li>
            {% endfor %}
        </ul>
    </li>
    <li>
        <span>Localisation</span>
        <ul>
            {% for region, villes in etabByVilleOrder %}
            <li>
                <a class="region">{{ region }}</a>
                <ul>
                    {% for ville, etabs in villes %}
                    <li>
                        <a class="ville">{{ ville }}</a>
                        <ul>
                            {% for etab in etabs %}
                            <li><a href="{{ etab.Id }}">{{ etab.Name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% endfor %}
                </ul>
            </li>
            {% endfor %}
        </ul>
    </li>
</ul>