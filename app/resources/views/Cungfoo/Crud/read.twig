{% extends 'Cungfoo/base.twig' %}
{% block content %}
    <h2>{{ (name ~ ".crud.view") | trans  ({'%name%': object['Id'] })  }}</h2>
    <table class="table">
        <tbody>
            {% for fieldname in fieldnames %}
                <tr>
                   <th>{{ fieldname }}</th>
                    <td>{{ object[fieldname] }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <hr/>

    <div class="form-actions">
        <div class="btn-group">
            <a class="btn" href="{{ path('%s_crud_list' | format (name)) }}"><i class="icon-list"></i> {{ "crud.button.list" | trans }}</a>
            <a class="btn" href="{{ path('%s_crud_update' | format (name), {'id': object['Id']}) }}"><i class="icon-edit"></i> {{ "crud.button.edit" | trans }}</a>
            <a class="btn" href="{{ path('%s_crud_delete' | format (name), {'id': object['Id']}) }}"><i class="icon-remove-circle"></i> {{ "crud.button.delete" | trans }}</a>
        </div>
    </div>
{% endblock %}